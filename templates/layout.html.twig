<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}dkarlovi.github.io{% endblock %}</title>

    {{ encore_entry_link_tags('app') }}
</head>
<body>

{% block body %}{% endblock %}

<footer class="footer" style="background-image: url('{{ asset('assets/images/footer-bg-shape.svg') }}');">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 text-center">
                <a class="footer-brand mb-4 d-block" href="{{ url('home') }}">
                    <img src="{{ asset('assets/images/logo.png') }}" alt="logo" width="100">
                </a>
                <p class="text-light mb-4">TODO: put smart here</p>
                <ul class="list-unstyled mb-5 footer-menu">
                    {% for link in yassg_get('menus', "footer").items %}
                    <li class="list-inline-item">
                        <a href="{{ link.url }}">{{ link.title }}</a>
                    </li>
                    {% endfor %}
                </ul>
                <ul class="list-unstyled social-icons">
                    {% for link in yassg_find_all('socials') %}
                    <li class="list-inline-item">
                        <a href="{{ link.url }}" title="{{ link.title }}"><i class="{{ link.icon }}"></i></a>
                    </li>
                    {% endfor %}
                </ul>
                <p>&copy; {{ yassg_get('pages', '/home.md').title }} | Theme by <a target="_blank" rel="noopener noreferrer" href="https://statichunt.com/" class="text-muted text-decoration-underline">statichunt</a>
                </p>
            </div>
        </div>
    </div>
</footer>

{{ encore_entry_script_tags('app') }}
</body>
</html>
