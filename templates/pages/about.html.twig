{% extends 'layout.html.twig' %}

{% set page = yassg_find_one_by('pages', {condition: {'item.route': _route}}) %}
{% block body %}
    <section class="mt-4">
        <div class="container">
            <div class="row mb-5">
                <div class="col-12">
                    <div class="position-relative mb-5">
                        {{ yassg_picture(page.image, {width: 1200, height: 800, attrs: {alt: page.title}, img_attrs: {fetchpriority: "high", loading: "eager", class: "img-fluid w-100 rounded-4"}}) }}
                        <div class="position-absolute bottom-0 start-0 w-100 p-4" style="background: rgba(0,0,0,0.6);">
                            <h2 class="mb-0 text-white">{{ page.title }}</h2>
                        </div>
                    </div>
                    <div class="content">
                        {{ page.body|raw }}
                    </div>
                </div>
            </div>
            {#
            <div class="row">
                {{ with .Params.experience }}
                {{ if .enable }}
                <div class="col-md-6">
                    <div class="border rounded p-4">
                        <h2 class="mb-5 h4 title-border">{{ .title | markdownify }}</h2>
                        <ul class="list-styled" style="columns:2">
                            {{ range .experience_list }}
                            <li>{{ . | markdownify}}</li>
                            {{ end }}
                        </ul>
                    </div>
                </div>
                {{ end }}
                {{ end }}
            </div>
            #}
        </div>
    </section>
{% endblock %}
